@model IEnumerable<Library.Models.Subcategory>

@{
    ViewBag.Title = Library.Resources.SharedResource.Index;
}

<h2>@Library.Resources.SharedResource.Index</h2>

<p>
    @Html.ActionLink(Library.Resources.SharedResource.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Library.Resources.SharedResource.Category &nbsp; @Library.Resources.SharedResource.Name
        </th>
        <th>
            @Library.Resources.SharedResource.Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(Library.Resources.SharedResource.Edit, "Edit", new { id=item.SubcategoryID }) |
            @Html.ActionLink(Library.Resources.SharedResource.Details, "Details", new { id=item.SubcategoryID }) |
            @Html.ActionLink(Library.Resources.SharedResource.Delete, "Delete", new { id=item.SubcategoryID })
        </td>
    </tr>
}

</table>

@model IEnumerable<Library.Models.Author>

@{
    ViewBag.Title = Library.Resources.SharedResource.Index;
}

<h2>@Library.Resources.SharedResource.Index</h2>

<p>
    @Html.ActionLink(Library.Resources.SharedResource.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.ActionLink(Library.Resources.SharedResource.Edit, "Edit", new { id=item.AuthorID }) |
            @Html.ActionLink(Library.Resources.SharedResource.Details, "Details", new { id=item.AuthorID }) |
            @Html.ActionLink(Library.Resources.SharedResource.Delete, "Delete", new { id=item.AuthorID })
        </td>
    </tr>
}

</table>

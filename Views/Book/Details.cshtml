@model Library.Models.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    @foreach (var item in Model.Pictures)
    {
<div>
    <img src="@item.Link" height="450px" width="450px"/>
    <br />
</div>
            }

<dl class="dl-horizontal">
    <dt>
        @Library.Resources.SharedResource.Author
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Author.Name)<a> </a>@Html.DisplayFor(model => model.Author.Surname)
    </dd>

    <dt>
        @Library.Resources.SharedResource.PublishingHouse
    </dt>

    <dd>
        @Html.DisplayFor(model => model.PublishingHouse.Name)
    </dd>

    <dt>
        @Library.Resources.SharedResource.Title
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt>
        @Library.Resources.SharedResource.Category
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Subcategory.Category.Name)
    </dd>
    <dt>
        @Library.Resources.SharedResource.Subcategory
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Subcategory.Name)
    </dd>
    <dt>
        @Library.Resources.SharedResource.YearOfPublication
    </dt>

    <dd>
        @Html.DisplayFor(model => model.PublicYear)
    </dd>

    <dt>
        @Library.Resources.SharedResource.Amount
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Amount)
    </dd>

    <dt>
        @Library.Resources.SharedResource.Files
    </dt>
    <dd>
        @foreach (var link in Model.Files)
        {
            <a href="@link.Address">@link.Name</a>
        }
    </dd>

    <dt>
        @Library.Resources.SharedResource.Tags
    </dt>
    <dd>
        @foreach (var tag in Model.Tags)
        {
            @tag.Name <br />
        }
    </dd>
</dl>
</div>
<p>
    @Html.ActionLink(Library.Resources.SharedResource.Edit, "Edit", new { id = Model.ISBN }) |
    @Html.ActionLink(Library.Resources.SharedResource.BackToList, "Index")
</p>
